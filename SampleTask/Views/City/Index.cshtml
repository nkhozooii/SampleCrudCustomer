@using SampleTask.Models;
@model IEnumerable<City>
@{
    ViewData["Title"] = "City List";
}

<div class="container shadow p-5">
    @if (TempData["SuccessMsg"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMsg"]
        </div>
    }
    @if (TempData["ErrorMsg"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMsg"]
        </div>
    }
    <h1 class="text-center">City List</h1>
    <div class="col mb-3">
        <a asp-controller="City" asp-action="Create" class="btn btn-primary">Add City</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">City Id</th>
                <th scope="col"> City Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="30%">
                        @item.Id
                    </td>
                    <td width="40%">
                        @item.CityName
                    </td>
                    <td width="30%">
                        <a asp-controller="City" asp-action="Edit" asp-route-cityId="@item.Id" class=" btn btn-primary">Edit</a>&nbsp;
                        <a asp-controller="City" asp-action="Delete" asp-route-cityId="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
